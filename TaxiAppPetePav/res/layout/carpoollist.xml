<!-- 
uses the CarpoolController.java
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/makeofferbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Offer" 
            android:onClick="goToMakeOffer"
            />

        <Button
            android:id="@+id/editprofilebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile" 
            android:onClick="goToEditProfile"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout" 
            android:onClick="goToLogout" 
            /><!-- 
            Goes back to log out screen  may need to change the intents
             -->

    </LinearLayout>
 
    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
 
    <ListView
        android:id="@+id/listviewCarpool"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
</LinearLayout>